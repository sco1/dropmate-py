[flake8]
max-line-length=100
import-order-style=pycharm
application-import-names=dropmate_py,tests
extend-ignore=
    # pycodestyle
    E203,E226,E701
    # flake8-annotations
    ANN002,ANN003,ANN101,ANN102,ANN204,ANN206,
extend-exclude=
    .venv,
per-file-ignores =
    tests/test_*.py:E501,
    dropmate_py/audit_errors.py: E501,
